<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Arcadia.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/arcadia_background</item>
        <item name="postSplashScreenTheme">@style/Theme.Arcadia</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <!-- Set system bars to dark blue to prevent white flash -->
        <item name="android:statusBarColor">@color/arcadia_background</item>
        <item name="android:navigationBarColor">@color/arcadia_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>

